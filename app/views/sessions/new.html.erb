<h1><%= t('session.h1') %></h1>

<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <%= form_for :session, url: login_path do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>


      <%= f.submit t('session.submit'), class: "btn btn-primary submit_button" %>
    <% end %>
    <br>
    <center><p>New user? <%= link_to t('session.signup_link'), signup_path %></p></center>
  </div>
</div>
