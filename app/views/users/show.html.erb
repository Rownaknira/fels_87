<h3 class="text-uppercase"><strong><%= t('heading.profile')%></strong></h3>
<div class="row">
  <aside class="col-md-4">
    <blockquote>
      <section class="user_info">
        <h1 class="text-capitalize">
          <%= @user.name %>
        </h1>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
    </blockquote>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.activities.any? %>
      <%= render "user_activity" %>
    <% end %>
  </div>
</div>
