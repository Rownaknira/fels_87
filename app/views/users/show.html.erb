<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.lessons.any? %>
    <div class="activity">
      <h3><%= t('activity.activity') %></h3>
      <%= render "user_activity" %>
    </div>
    <% end %>
  </div>
</div>
