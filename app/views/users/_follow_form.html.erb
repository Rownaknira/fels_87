<% unless current_user?(@user) %>
  <div id="follow_form">
    <% if current_user.following?(@user) %>
    <%= link_to t('UnFollow_link'), follow_path(@user), method: :delete, class: "btn"%>
    <% else %>
    <%= link_to t('Follow_link'), follow_path(@user), method: :put, class: "btn"%>
    <% end %>
  </div>
<% end %>
