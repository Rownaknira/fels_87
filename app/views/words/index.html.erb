<% provide :title, t('header.word_list') %>
<div id="word_list">
  <div class="span12 offset1">
    <%= form_tag words_path, {method: :get} do %>
      <div>
        <span><%= t('category.show') %></span>
        <%= select_tag "category_id", options_from_collection_for_select(Category.all, "id", "name",selected: params[:category_id]), { prompt: t('word.select_list') }%>
      </div>
      <div class="radio">
        <%= radio_button_tag "learn", "learned", params[:learn] == "learned" %>
        <span><%= t('word.learn') %></span></div>
      <div class="radio">
        <%= radio_button_tag "learn", "not_learn", params[:learn] == "not_learn" %>
        <span><%= t('word.not_learn') %></span></div>
      <div class="radio">
        <%= radio_button_tag "learn", "all", params[:learn] == "all" || params[:learn].blank? %>
        <span><%= t('word.all') %></span>
      </div>
      <div><%= submit_tag t('filter.filt_name'), class: "btn btn-primary", name: nil %></div>
    <% end %>
  </div>
  <br>
  <br>
  <div class="span10 offset1">
    <table class="table">
      <%= will_paginate @words %>
      <caption><b><%= t('category_user.res')%>: <%= pluralize @words.count, "word" %> <%= t('category_user.found') %></b></caption>
      <thead>
        <tr>
          <th><%= t('category_user.th_word')%></th>
          <th><%= t('category_user.meaning')%></th>
        </tr>
      </thead>
      <tbody>
        <%= render @words %>
      </tbody>
    </table>
  </div>
</div>