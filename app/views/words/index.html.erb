<div class="row">
  <h1><%= t('word.list')%></h1>
  <br>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Category</th>
        <th>Content</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <% @words.each do |word|%>
      <tr>
        <td><%= word.category.name%></td>
        <td><%= word.content%></td>
        <td><%= link_to t('form.edit'),edit_admin_word_path(word)%></td>
        <td><%= link_to t('form.delete'),admin_word_path(word),method: :delete,data: {confirm: t('delete.confirmation')}%></td>
      </tr>
    <% end %>
  </table>
  <br>
  <%= link_to t('form.create'),new_admin_word_path,class: "btn btn-primary"%>	
</div>