          <li><%= link_to t('nav.home'), root_path %></li>
          <li><%= link_to t('nav.users'), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="1000" data-close-others="false"><%= t('category.show')%> <b class="caret"></b></a>
