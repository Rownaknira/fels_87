<div class="row">
  <h1><%= t('category.list')%></h1>
  <br>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="2"></th>
      </tr>	
    </thead>
    <% @categories.each do |category|%>
      <tr>
        <td><%= category.name%></td>
        <td><%= link_to t('form.edit'),edit_admin_category_path(category)%></td>
        <td><%= link_to t('form.delete'),admin_category_path(category),method: :delete,data: {confirm: t('delete.confirmation')}%></td>
      </tr>
    <% end %>	
  </table>
  <br>
    <%= link_to t('form.create'),new_admin_category_path,class: "btn btn-primary"%>	
</div>	